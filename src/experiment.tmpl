{namespace lweb.view}

{template experiment}
	  <h1>{$header}</h1>
	  <div class="result">
	       Результат={$result}
	  </div>
	  <a href="{$ololo}">Next</a>
{/template}

{template ololo}
	  <div class="ololo">
	       ОЛОЛО
	  </div>
{/template} 

{template tree-view}
	  {if $leaf}
	      	{for $i in range($level ? $level : 0)}
		     &nbsp
		{/for}
		{$leaf}
		<br />
	  {else}
		{foreach $child in $children}
			 {call tree-view data="$child"}
			       {param level: ($level ? $level : 0) + 1 /}
			 {/call}
		{/foreach}
          {/if}
{/template}

